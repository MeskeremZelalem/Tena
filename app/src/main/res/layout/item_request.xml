<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:background="@drawable/button_rounded"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/container">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="bold"
        android:textColor="@color/darkBlue"
        android:background="@drawable/text_view_rounded"
        android:padding="7dp"
        android:text="Selamawit negus"
        android:textSize="29sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Age:-20"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Diagnosis with kidiney Transplant"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="2500USD"
                android:textColor="@color/lightBlue"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:focusableInTouchMode="true"
                        android:layout_gravity="center"
                        android:indeterminateOnly="true"
                        android:numStars="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:outlineSpotShadowColor="@color/darkBlue"
                            android:outlineAmbientShadowColor="@color/darkBlue"/>

                        <TextView
                            android:id="@+id/progressBarinsideText"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="8sp"
                            android:text ="20%"
                            android:gravity="center"
                            />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/child"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_gravity="center"
        android:text="Fund"
        android:textColor="#fff"
        android:textSize="18sp"
        android:id="@+id/btn_fund"
        android:onClick="openFundingActivity"/>

</LinearLayout>